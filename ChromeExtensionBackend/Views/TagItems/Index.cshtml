@model IEnumerable<ChromeExtensionBackend.Models.Entities.TagItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEditing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFlipped)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsShowing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetaDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Selection)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEditing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFlipped)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsShowing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TagItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TagItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TagItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
